    <!-- Background (Complete Ring) -->
    <item>
        <shape android:shape="ring"
            android:innerRadiusRatio="3.0"
            android:useLevel="false"
            android:thicknessRatio="25">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!-- Arc Shape (Progress) -->
    <item>
        <rotate
            android:fromDegrees="0"
            android:toDegrees="180"
            android:pivotX="60%"
            android:pivotY="20%">
            <shape android:shape="ring" android:innerRadiusRatio="4.0" android:useLevel="false"
                android:thicknessRatio="25">
                <solid android:color="@color/app_color" />
            </shape>
        </rotate>
    </item>


</layer-list>